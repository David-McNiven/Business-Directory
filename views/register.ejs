<%- include('partials/header') %>
<h1>Register</h1>
<form method="post">
  <fieldset class="form-group">
    <label for="username" class="col-sm-2">Username:</label>
    <div class="col-sm-2">
      <input name="username" id="username" required class="form-control" />
    </div>
  </fieldset>
  <fieldset class="form-group">
    <label for="password" class="col-sm-2">Password:</label>
    <div class="col-sm-2">
      <input name="password" id="password" type="password" required class="form-control" />
    </div>
  </fieldset>
  <fieldset class="form-group">
    <label for="confirm" class="col-sm-2">Confirm Password:</label>
    <div class="col-sm-2">
      <input name="confirm" id="confirm" type="password" required class="form-control" />
    </div>
  </fieldset>
  <fieldset class="form-group">
    <button type="submit" class="btn col-sm-offset-2">Submit</button>
  </fieldset>
</form>
<%- include('partials/footer') %>
